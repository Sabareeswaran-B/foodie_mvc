                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span data-feather="file-text"></span>
                                Delete
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 mt-5">
                @if (User.Identity!.IsAuthenticated || ViewContext.RouteData.Values["Controller"]!.ToString() == "Home")
                {
                    <div class="container">
                        <main role="main" class="pb-3">
                            @RenderBody()
                        </main>
                    </div>
                }
                else
                {
                    <div class="container text-center">
                        <main role="main" class="pb-3">
                            @{
                                IgnoreBody();
                            }
                            <h3 style="color: grey;">Please login to access this content!</h3><br>
                            <a class="btn btn-primary fw-bold" style="padding: 5px 30px 5px 30px;" asp-action="Login"
                            asp-controller="Account">
