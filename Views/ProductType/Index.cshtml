@model IEnumerable<foodie_mvc.Models.ProductType>

@{
    ViewData["Title"] = "Product Type";
}

<h1>Product Type</h1>

<p>
<div class="row">
    <div class="col-lg-6">
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </div>
    <form class="form-inline mr-auto w-50 navbar-search" asp-controller="ProductType" asp-action="Index" method="get">
        <div class="input-group">
            <input type="text" name="Search" class="form-control bg-light border-0 small" placeholder="Search for..."
                aria-label="Search" aria-describedby="basic-addon2">
            <div class="input-group-append">
                <input type="submit" value="Filter" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>
</p>
<div class="tableCard shadow-lg p-3 mt-5" style="border-radius: 25px; overflow: auto;">
    <table class="table table-stripe table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TypeName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Active)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ServedAs)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TypeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Active)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ServedAs)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.TypeId" class="btn btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.TypeId" class="btn btn-secondary"
                        style="margin: 0 15px 0 15px;">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.TypeId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
