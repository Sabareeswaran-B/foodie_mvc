@model foodie_mvc.Models.UserProfile
@{
    ViewData["Title"] = "User Profile";
}

<div>
    <h2>@ViewData["Title"].</h2>
    <br>
    <br>

    <div class="shadow p-4" style="border-radius: 15px; min-height: 150px; width: fit-content">
        <div class="row">
            <div class="col-md-3">
                <img src="@Model.ProfileImage" style="border-radius: 50%; height: 100%" alt=""
                    class="img-rounded img-responsive" />
            </div>
            <div class="col-md-6">
                <h3>@Model.Name</h3>
                <p>
                    <i class="glyphicon glyphicon-envelope"></i> @Model.EmailAddress
                </p>
            </div>
        </div>
        <div style="width:75%; margin:auto; margin-top: 30px;">
            <a class="nav-link text-light btn btn-danger" style="padding: 5px 15px 5px 15px;color: #fff;" asp-area=""
                asp-controller="Account" asp-action="Logout">Logout</a>
        </div>
    </div>
</div>